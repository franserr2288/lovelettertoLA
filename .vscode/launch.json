{
  "version": "0.2.0",
  "configurations": [
    {
        "name": "Python: Current File",
        "type": "debugpy",
        "request": "launch",
        "program": "${file}",
        "console": "integratedTerminal",
        "cwd": "${fileDirname}",
        "env": {
          "AWS_PROFILE": "local-dev",
          // resolve imports -> mimic layer
          "PYTHONPATH": "${workspaceFolder}/src/lib"
        },
        // load in env file to avoid code changes
        "envFile": "${workspaceFolder}/.env"
    }
  ]
}